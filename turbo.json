{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local",
        "NODE_ENV",
        "NEXT_PUBLIC_BRIDGE_ENV",
        "NEXT_PUBLIC_DEFAULT_HOST",
        "NEXT_PUBLIC_BASE_URL",
        "NEXT_PUBLIC_LOG_ENDPOINT"
    ],
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "dist/**"
            ],
            "env": [
                "NODE_ENV",
                "NEXT_PUBLIC_BRIDGE_ENV",
                "NEXT_PUBLIC_DEFAULT_HOST",
                "NEXT_PUBLIC_BASE_URL",
                "NEXT_PUBLIC_LOG_ENDPOINT"
            ]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true,
            "env": [
                "NODE_ENV",
                "NEXT_PUBLIC_BRIDGE_ENV",
                "NEXT_PUBLIC_DEFAULT_HOST",
                "NEXT_PUBLIC_BASE_URL",
                "NEXT_PUBLIC_LOG_ENDPOINT"
            ]
        }
    }
}