{
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 4,
    "overrides": [
        {
            "files": [
                "*.yml",
                "*.yaml"
            ],
            "options": {
                "tabWidth": 2,
                "useTabs": false,
                "printWidth": 120,
                "proseWrap": "preserve"
            }
        },
        {
            "files": [
                "amplify.yml"
            ],
            "options": {
                "tabWidth": 2,
                "useTabs": false,
                "printWidth": 120,
                "proseWrap": "preserve",
                "endOfLine": "lf"
            }
        }
    ],
    "plugins": [
        "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
        "^react$",
        "^next",
        "<THIRD_PARTY_MODULES>",
        "^@?\\w",
        "^(@|components|utils|config|assets|styles|service|common|types)(/.*|$)",
        "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}